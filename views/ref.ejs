<script>
var app = angular.module('statusApp', []);
app.controller('statusController', function ($scope,$http,$window) {
	$http({
    	  method: 'GET',
    	 url: '/set',
    	 
      }).
        then(function(response) {
      	  $scope.name=response.data.name;
      	  $scope.email=response.data.email;
      	
        }); 
	
	
	
	$scope.search = function (){
		var toSearch={
				name:$scope.search_bar
		}
		tname=angular.toJson(toSearch);
		$scope.selection=[];
		$http({
	      	  method: 'POST',
	      	 url: '/search',
	      	 data: tname
	        }).
	          then(function(response) {
	        	  angular.forEach(response.data,function(user){
	        	  
	        	  $scope.selection.push({firstname:user.firstname,lastname:user.lastname,useremail:user.useremail});
	        	  
	        	  });
	          }); 
	}
	 $scope.profile=function (useremail){
		 
		 var email={email:useremail}
		 var pname=angular.toJson(email);
		$http({
	      	  method: 'POST',
	      	 url: '/profile',
	      	 data: pname
	        }).
	          then(function(response) {
	        	  $window.location.href = '/profile';
	        	
	          }); 
		
		 
	 }
	
});

