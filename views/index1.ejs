  	<div  ng-app="statusApp"  ng-controller="statusController">
     <div class="row">

         <div class="col-md-9 hidden-xs">
            <div class="row">
  
                <div class="col-sm-6">
                
                    <input type="text" name="username" ng-model="username" placeholder="username">
                    </div>
                     <div class="col-sm-6">
					<input type="password" name="password" ng-model="password" placeholder="password">				   
				</div>
              <div class=row>
              <div class="col-md-10"></div>
                <div class="col-md-2">
                     
                        <button type="submit" ng-click="search()"  class="btn  btn-danger ">Submit</button>
                     </div>
                </div>
      
            
            </div> 
           
        </div>
    </div>
    </div>
    
<script>
		var app = angular.module('statusApp', []);
		app.controller('statusController', function ($scope,$http,$window) 
	{
	$scope.search = function (){
		var username=$scope.username;
		var password=$scope.password;
		/* alert(username); */
		$http({
	      	  method: 'POST',
	      	 url: '/login',
	      	 data: {"username":username,"password":password}
	        }).
	          then(function(response) {
	        	  $window.location.href = '/success';
	          }); 
	}
	
});
</script>

