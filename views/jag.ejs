var app = angular.module('jagfb', []);
app.controller('jagfb', function ($scope,$http,$window) 
		{
			//alert($scope.upform.firstname.$error.required);
			$scope.signup = false;
			$scope.login = function (){
			
				if($scope.signinform.user_email.$dirty && $scope.signinform.user_email.$valid)
					{
					if($scope.signinform.user_password.$dirty && $scope.signinform.user_password.$valid)
						{
						var user_email=$scope.user_email;
						var user_password=$scope.user_password;
						$http({
					      	  method: 'POST',
					      	 url: '/home',
					      	 data: {"user_email":user_email,"user_password":user_password}
					        }).
					          then(function(response) {
					        	  $window.location.href = '/home';
					          }); 
						}
					else
						{
						$scope.signin = true;
						}
					}
				else
					{
					$scope.signin = true;
					}
					
			}	
			
			$scope.logup = function (){
				if($scope.signupform.firstname.$dirty && $scope.signupform.firstname.$valid)
					{
					if($scope.signupform.lastname.$dirty && $scope.signupform.lastname.$valid)
						{
						if($scope.signupform.email.$dirty && $scope.signupform.email.$valid)
							{
							if($scope.signupform.password.$dirty && $scope.signupform.password.$valid)
								{
								if($scope.signupform.confirm_password.$dirty && $scope.signupform.confirm_password.$valid)
									{
									var user_email=$scope.user_email;
									var user_password=$scope.user_password;
